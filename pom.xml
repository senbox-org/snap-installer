<project>
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.esa.snap</groupId>
    <artifactId>snap-installer</artifactId>
    <version>10.0.0-JDK11SHOT</version>
    <packaging>jar</packaging>    
    <name>SNAP Installer Project</name>

    <build>
    	<plugins>
			<plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <version>2.6.1</version>
                <configuration>
                    <filesets>
						<fileset>
                            <directory>target</directory>
                            <includes>
                                <include>**/*</include>
                            </includes>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>
        </plugins>	
    </build>
</project>
